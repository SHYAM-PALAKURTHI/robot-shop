pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        git branch: 'main', url: 'https://github.com/SHYAM-PALAKURTHI/robot-shop'
      }
    }
    stage('Install Dependencies') {
      steps {
        sh 'ls -ltr'
        sh 'cd cart && npm install' // or 'yarn install' if you are using yarn
      }
    }
    stage('Run Tests') {
      steps {
        sh 'cd cart && npm test' // or the equivalent test command for your project
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "palakuws/shyamkumarpalakurth_cicdpipelines:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('9c54a871-c19c-4c4b-98b0-6551dd1d0c31')
      }
      steps {
        script {
          sh 'cd cart && docker build -t ${DOCKER_IMAGE} .' // Ensure Dockerfile is in the 'cart' directory
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://index.docker.io/v1/', "9c54a871-c19c-4c4b-98b0-6551dd1d0c31") {
            dockerImage.push()
          }
        }
      }
    }
    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "robot-shop"
        GIT_USER_NAME = "SHYAM-PALAKURTHI"
      }
      steps {
        withCredentials([string(credentialsId: 'GITHUB_ID', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "shyamkumarpalakurthi6@gmail.com"
            git config user.name "SHYAM-PALAKURTHI"
            BUILD_NUMBER=${BUILD_NUMBER}
            sed -i "s/version/${BUILD_NUMBER}/g" K8s/helm/templates/cart-deployment.yaml
            git add K8s/helm/templates/cart-deployment.yaml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }
  }
}
